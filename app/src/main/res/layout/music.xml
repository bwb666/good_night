<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_sleep">

    <TextView
        android:id="@+id/tv_startSleep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:text="Song classification"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/yylx1"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:orientation="vertical"
                android:background="@drawable/changfangxing">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Natural sound"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="8"
                    android:layout_gravity="center" />



            </LinearLayout>
            <LinearLayout
                android:id="@+id/yylx2"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/changfangxing"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Meditation"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp"
                    android:text="4"
                    android:layout_gravity="center"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/yylx3"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/changfangxing"
                android:orientation="vertical">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Deep sleeping"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/yylx4"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/changfangxing"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Piano piece"
                    android:textSize="20dp"
                    android:layout_gravity="center"
                    android:layout_margin="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"

            android:orientation="horizontal"
            android:weightSum="2">
            <LinearLayout
                android:id="@+id/yylx5"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/changfangxing"
                android:orientation="vertical">


                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="5 minutes to cure insomnia"
                    android:layout_gravity="center"
                    android:textSize="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="7"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>


            </LinearLayout>
            <LinearLayout
                android:id="@+id/yylx6"
                android:layout_width="wrap_content"
                android:layout_height="120dp"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:background="@drawable/changfangxing"
                android:orientation="vertical">

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:text="Buddha song"
                    android:layout_gravity="center"
                    android:textSize="20dp"
                    android:layout_margin="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:layout_gravity="center"
                    android:textSize="20dp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>